<div class="navbar bg-base-100 shadow-md">
    <div class="flex-1">
        <a class="btn btn-ghost text-xl" href="">Clever Docs</a>
    </div>
    <div class="flex-none">
        <button class="btn btn-square btn-ghost lg:hidden" @onclick="ToggleNavMenu">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-5 h-5 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
        </button>
    </div>
</div>

<div class="lg:hidden">
    <div class="@(collapseNavMenu ? "hidden" : "block") bg-base-200" @onclick="ToggleNavMenu">
        <ul class="menu p-2">
            <li>
                <NavLink class="@($"{GetNavLinkClass("")} active")" href="" Match="NavLinkMatch.All">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    Home
                </NavLink>
            </li>
        </ul>
    </div>
</div>

<div class="hidden lg:block">
    <ul class="menu menu-horizontal px-1 bg-base-100 shadow-sm">
        <li>
            <NavLink class="@($"{GetNavLinkClass("")} active")" href="" Match="NavLinkMatch.All">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Home
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string GetNavLinkClass(string path)
    {
        var currentPath = NavigationManager.Uri.Replace(NavigationManager.BaseUri, "/");
        return currentPath == path ? "active" : "";
    }

    [Inject] private NavigationManager NavigationManager { get; set; } = null!;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
