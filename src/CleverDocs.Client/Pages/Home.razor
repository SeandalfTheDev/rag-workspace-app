@page "/home"

<PageTitle>Dashboard - CleverDocs</PageTitle>

<div class="min-h-screen bg-base-200">
    <!-- Top Navigation Bar -->
    <div class="navbar bg-base-100 shadow-lg">
        <div class="navbar-start">
            <div class="dropdown">
                <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"></path>
                    </svg>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                    <li><a>Documents</a></li>
                    <li><a>Chat Sessions</a></li>
                    <li><a>Team</a></li>
                    <li><a>Settings</a></li>
                </ul>
            </div>
            <a class="btn btn-ghost text-xl">CleverDocs</a>
        </div>
        
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
                <li><a class="btn btn-ghost">Documents</a></li>
                <li><a class="btn btn-ghost">Chat Sessions</a></li>
                <li><a class="btn btn-ghost">Team</a></li>
            </ul>
        </div>
        
        <div class="navbar-end">
            <!-- Search -->
            <div class="form-control mr-4">
                <input type="text" placeholder="Search documents..." class="input input-bordered w-24 md:w-auto" />
            </div>
            
            <!-- User Menu -->
            <div class="dropdown dropdown-end">
                <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                    <div class="w-10 rounded-full">
                        <div class="avatar placeholder">
                            <div class="bg-primary text-primary-content rounded-full w-10">
                                <span class="text-xs">JD</span>
                            </div>
                        </div>
                    </div>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                    <li><a class="justify-between">Profile <span class="badge">New</span></a></li>
                    <li><a>Settings</a></li>
                    <li><a href="/login">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
        <!-- Welcome Section -->
        <div class="hero bg-gradient-to-r from-primary to-secondary text-primary-content rounded-box mb-8">
            <div class="hero-content text-center py-12">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Welcome back!</h1>
                    <p class="py-6">Ready to dive into your documents and get answers? Upload new files or continue your conversations.</p>
                    <button class="btn btn-accent mr-4">Upload Documents</button>
                    <button class="btn btn-outline btn-accent">Start New Chat</button>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="stat bg-base-100 rounded-box shadow">
                <div class="stat-figure text-primary">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <div class="stat-title">Documents</div>
                <div class="stat-value text-primary">@documentCount</div>
                <div class="stat-desc">+12% from last month</div>
            </div>
            
            <div class="stat bg-base-100 rounded-box shadow">
                <div class="stat-figure text-secondary">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                </div>
                <div class="stat-title">Chat Sessions</div>
                <div class="stat-value text-secondary">@chatSessionCount</div>
                <div class="stat-desc">Active conversations</div>
            </div>
            
            <div class="stat bg-base-100 rounded-box shadow">
                <div class="stat-figure text-accent">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
                <div class="stat-title">Team Members</div>
                <div class="stat-value text-accent">@teamMemberCount</div>
                <div class="stat-desc">In your workspace</div>
            </div>
            
            <div class="stat bg-base-100 rounded-box shadow">
                <div class="stat-figure text-info">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <div class="stat-title">AI Queries</div>
                <div class="stat-value text-info">@queryCount</div>
                <div class="stat-desc">This week</div>
            </div>
        </div>

        <!-- Two Column Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Recent Documents -->
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <h2 class="card-title">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Recent Documents
                    </h2>
                    
                    <div class="space-y-4">
                        @foreach (var doc in recentDocuments)
                        {
                            <div class="flex items-center space-x-3 p-3 rounded-lg hover:bg-base-200 cursor-pointer">
                                <div class="avatar placeholder">
                                    <div class="bg-primary text-primary-content rounded w-12 h-12">
                                        <span class="text-lg">📄</span>
                                    </div>
                                </div>
                                <div class="flex-1">
                                    <div class="font-bold">@doc.Name</div>
                                    <div class="text-sm opacity-50">@doc.UploadDate.ToString("MMM dd, yyyy") • @doc.Size</div>
                                </div>
                                <div class="dropdown dropdown-end">
                                    <div tabindex="0" role="button" class="btn btn-ghost btn-xs">⋮</div>
                                    <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-32">
                                        <li><a>View</a></li>
                                        <li><a>Download</a></li>
                                        <li><a>Delete</a></li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="card-actions justify-end">
                        <button class="btn btn-primary btn-sm">View All Documents</button>
                    </div>
                </div>
            </div>

            <!-- Recent Chat Sessions -->
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <h2 class="card-title">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                        </svg>
                        Recent Chat Sessions
                    </h2>
                    
                    <div class="space-y-4">
                        @foreach (var chat in recentChats)
                        {
                            <div class="flex items-center space-x-3 p-3 rounded-lg hover:bg-base-200 cursor-pointer">
                                <div class="avatar placeholder">
                                    <div class="bg-secondary text-secondary-content rounded w-12 h-12">
                                        <span class="text-lg">💬</span>
                                    </div>
                                </div>
                                <div class="flex-1">
                                    <div class="font-bold">@chat.Title</div>
                                    <div class="text-sm opacity-50">@chat.LastMessage</div>
                                    <div class="text-xs opacity-40">@chat.LastActivity.ToString("MMM dd, yyyy")</div>
                                </div>
                                <div class="badge badge-outline">@chat.MessageCount messages</div>
                            </div>
                        }
                    </div>
                    
                    <div class="card-actions justify-end">
                        <button class="btn btn-secondary btn-sm">View All Chats</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="mt-8">
            <h3 class="text-2xl font-bold mb-4">Quick Actions</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow cursor-pointer">
                    <div class="card-body items-center text-center">
                        <div class="avatar placeholder mb-4">
                            <div class="bg-primary text-primary-content rounded-full w-16">
                                <span class="text-2xl">📤</span>
                            </div>
                        </div>
                        <h4 class="card-title">Upload Documents</h4>
                        <p>Add new PDFs, Word docs, or text files to your workspace</p>
                    </div>
                </div>
                
                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow cursor-pointer">
                    <div class="card-body items-center text-center">
                        <div class="avatar placeholder mb-4">
                            <div class="bg-secondary text-secondary-content rounded-full w-16">
                                <span class="text-2xl">🤖</span>
                            </div>
                        </div>
                        <h4 class="card-title">Ask AI</h4>
                        <p>Start a new conversation and ask questions about your documents</p>
                    </div>
                </div>
                
                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow cursor-pointer">
                    <div class="card-body items-center text-center">
                        <div class="avatar placeholder mb-4">
                            <div class="bg-accent text-accent-content rounded-full w-16">
                                <span class="text-2xl">👥</span>
                            </div>
                        </div>
                        <h4 class="card-title">Invite Team</h4>
                        <p>Collaborate with your team members on shared documents</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int documentCount = 42;
    private int chatSessionCount = 8;
    private int teamMemberCount = 5;
    private int queryCount = 127;

    private List<DocumentItem> recentDocuments = new()
    {
        new DocumentItem { Name = "Product Requirements.pdf", UploadDate = DateTime.Now.AddDays(-1), Size = "2.4 MB" },
        new DocumentItem { Name = "Marketing Strategy.docx", UploadDate = DateTime.Now.AddDays(-3), Size = "1.8 MB" },
        new DocumentItem { Name = "Technical Specification.md", UploadDate = DateTime.Now.AddDays(-5), Size = "456 KB" },
        new DocumentItem { Name = "User Research Report.pdf", UploadDate = DateTime.Now.AddDays(-7), Size = "3.2 MB" }
    };

    private List<ChatItem> recentChats = new()
    {
        new ChatItem { Title = "Product Planning Discussion", LastMessage = "What are the key features for Q2?", LastActivity = DateTime.Now.AddHours(-2), MessageCount = 15 },
        new ChatItem { Title = "Technical Questions", LastMessage = "How does the authentication system work?", LastActivity = DateTime.Now.AddDays(-1), MessageCount = 8 },
        new ChatItem { Title = "Marketing Strategy Review", LastMessage = "Can you summarize the target audience analysis?", LastActivity = DateTime.Now.AddDays(-2), MessageCount = 22 },
        new ChatItem { Title = "User Research Insights", LastMessage = "What are the main pain points identified?", LastActivity = DateTime.Now.AddDays(-3), MessageCount = 12 }
    };

    public class DocumentItem
    {
        public string Name { get; set; } = "";
        public DateTime UploadDate { get; set; }
        public string Size { get; set; } = "";
    }

    public class ChatItem
    {
        public string Title { get; set; } = "";
        public string LastMessage { get; set; } = "";
        public DateTime LastActivity { get; set; }
        public int MessageCount { get; set; }
    }
}
